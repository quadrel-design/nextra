{
  "name": "nextra-theme-blog",
  "version": "4.0.0-app-router.7",
  "description": "A Nextra theme for blogs.",
  "repository": "https://github.com/shuding/nextra",
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "exports": {
    "./style.css": "./dist/style.css",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.mts"
    },
    "./cusdis": {
      "import": "./dist/components/cusdis.js",
      "types": "./dist/components/cusdis.d.mts"
    }
  },
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "cusdis": [
        "./dist/cusdis.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "dev": "tsup --watch . --watch ../nextra/src --watch ../nextra/styles",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "types:check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": ">=13",
    "nextra": "workspace:*",
    "react": ">=18",
    "react-cusdis": "^2.1.3",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "react-cusdis": {
      "optional": true
    }
  },
  "dependencies": {
    "next-themes": "^0.3.0",
    "next-view-transitions": "^0.3.0"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "next": "^14.2.5",
    "nextra": "workspace:*",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-lightningcss": "^1.0.0",
    "react": "^19.0.0-rc.0",
    "react-cusdis": "^2.1.3",
    "react-dom": "^19.0.0-rc.0",
    "tailwindcss": "^3.4.1",
    "vitest": "^2.0.3"
  },
  "sideEffects": false
}
