    "next-view-transitions": "^0.3.0"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.2.23",
    "next": "^15.0.2",
    "nextra": "workspace:*",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-lightningcss": "^1.0.0",
    "react": "18.3.1",
    "tailwindcss": "^3.4.1",
    "vitest": "^2.0.3"
  },
  "sideEffects": false
}
