    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "types:check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": ">=14",
    "nextra": "workspace:*",
    "react": ">=18",
    "react-dom": ">=18"
