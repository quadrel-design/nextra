  "dependencies": {
    "markdown-to-jsx": "^7.4.0",
    "next": "^15.0.2",
    "nextra": "workspace:*",
    "nextra-theme-docs": "workspace:*",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-intersection-observer": "^8.26.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.13",
    "@tailwindcss/postcss": "^4.0.0-beta.2",
    "pagefind": "^1.1.1",
    "tailwindcss": "^4.0.0-beta.2"
  },
  "browserslist": [
    ">= .25%",
    "not dead"
  ]
