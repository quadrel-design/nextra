{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        // Run `build` in workspaces I depend on first
        "^build"
      ],
      "outputs": ["dist/**", ".next/**", "loader.js"]
    },
    "test": {},
    "types:check": {
      "dependsOn": [
        // Run `build` in workspaces I depend on first
        "^build"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
